server {
    listen 80;
    server_name tudominio.com;  # Ajusta el nombre de dominio

    root /ruta/a/tu/proyecto/public;  # Ajusta la ruta a tu carpeta public

    index index.php index.html index.htm;

    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # Configuración de PHP-FPM
    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/var/run/php/php8.0-fpm.sock;  # Ajusta el socket PHP-FPM según tu configuración
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }

    # Configuración para establecer HTTP_AUTHORIZATION si está presente
    location / {
        if ($http_authorization) {
            set $http_authorization_copy $http_authorization;
        }
        fastcgi_param HTTP_AUTHORIZATION $http_authorization_copy;
    }
}
